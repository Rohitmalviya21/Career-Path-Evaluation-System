<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background: #f4f4f4;
        }


        .container {
            display: flex;
            flex-direction: column;
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
            background: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        .dashboard {
            display: flex;
            justify-content: space-between;
            gap: 20px;
        }

        .section {
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid #ccc;
            background: #f9f9f9;
            width: 48%;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        input,
        textarea,
        button {
            display: block;
            width: 100%;
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            background: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
        }

        button:hover {
            background: #0056b3;
        }

        .career-fields {
            margin-top: 20px;
        }


        body {
            box-sizing: border-box;
            background-image: linear-gradient(to right top, #eafaf1, #ebf9f3, #edf9f5, #eff8f6, #f1f7f6, #f1f7f6, #f1f6f6, #f1f6f6, #eff6f6, #ecf6f5, #eaf6f4, #e8f6f3);
        }

        .navbar {
            background-color: #223141 !important;
        }

        #logo_1 {
            font-family: 'Oswald', sans-serif;
            text-decoration: none;
            color: white;
            font-size: 25px;
            font-weight: bold;
        }

        #logo_2 {
            font-size: 25px;
            font-weight: bold;
            color: #0a6fe9;
            font-family: 'Oswald', sans-serif;
        }

        .nav-item {
            display: inline-block;
            margin-left: 10px;
            margin-right: 15px;
            font-size: 16px !important;
        }

        .nav-link {
            font-family: 'Oswald', sans-serif;
            text-decoration: none;
            color: white;
            transition: all 0.3s linear;
        }
    </style>
</head>

<body>


    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid ">

            <a class="navbar-brand" href="#">
                <span id="logo_1">Career</span>
                <span id="logo_2">Path</span>

            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText"
                aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse  navbar-collapse" id="navbarText">

                <ul class="navbar-nav ms-auto  mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link " aria-current="page" href="/api/users/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/api/users/contact">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/api/users/about">About</a>
                    </li>
                    <% if (isAuthenticated) { %>
                        <% if (role==='admin' ) { %>
                            <!-- Admin specific links -->
                            <li class="nav-item"><a class="nav-link" href="/api/users/admin">Add Course</a></li>
                            <li class="nav-item"><a class="nav-link" href="/api/users/logout">SignOut</a></li>
                            <% } else { %>
                                <!-- User specific links -->
                                <li class="nav-item"><a class="nav-link" href="/api/users/logout">SignOut</a></li>
                                <% } %>
                                    <% } else { %>
                                        <li class="nav-item"><a class="nav-link" href="/api/users/signup">SignUp</a>
                                        </li>
                                        <li class="nav-item"><a class="nav-link" href="/api/users/login">SignIn</a></li>
                                        <% } %>
                </ul>

            </div>
        </div>
    </nav>


    <div class="container">
        <h1>Admin Dashboard</h1>

        <!-- Dashboard Sections -->
        <div class="dashboard">
            <!-- Left Section: Add Career Path -->
            <div class="section">
                <h2>Add Career Path</h2>
                <form action="/api/users/career-path" method="POST">
                    <input type="number" name="careerPathId" placeholder="CareerPathId" %>">
                    <input type="text" name="name" placeholder="Career Path Name" required>
                    <textarea name="description" placeholder="Description" required></textarea>
                    <button type="submit">Add Career Path</button>
                </form>
            </div>

            <!-- Right Section: Add Course -->
            <div class="section">
                <h2>Add Course</h2>
                <form action="/api/users/course" method="POST">
                    <input type="number" name="careerPathId" placeholder="CareerPath Id">
                    <input type="number" name="courseId" placeholder="courseId">
                    <input type=" text" name="name" placeholder="Course Name" required>
                    <textarea name="description" placeholder="Course Description"></textarea>
                    <button type="submit">Add Course</button>
                </form>
            </div>
        </div>

        <!-- Career Field Section Below -->
        <div class="career-fields section">
            <h2>Add Career Field</h2>
            <form action="/api/users/careerfield" method="POST">
                <input type="number" name="courseId" placeholder="Course Id" required">
                <input type="text" name="name" placeholder="Career Field Name" required>
                <textarea name="description" placeholder="Career Field Description"></textarea>
                <input type="text" name="skills" placeholder="Skills (comma-separated)">
                <input type="text" name="avgSalary" placeholder="Average Salary">
                <input type="text" name="demand" placeholder="Demand">
                <input type="text" name="links" placeholder="links (comma-separated)">
              
                <button type="submit">Add Career Field</button>
            </form>
        </div>
    </div>
</body>

</html>
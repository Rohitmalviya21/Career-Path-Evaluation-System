<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Admin Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<style>
    body {
        background-color: #F7F9F9;
    }

    .navbar {
        background-color: #223141 !important;

    }

    #logo_1 {
        font-family: 'Oswald', sans-serif;
        text-decoration: none;
        color: white;
        font-size: 25px;
        font-weight: bold;
    }

    #logo_2 {
        font-size: 25px;
        font-weight: bold;
        color: white;
        color: #0a6fe9;
        font-family: 'Oswald', sans-serif;
    }



    .nav-item {
        display: inline-block;
        margin-left: 10px;
        margin-right: 15px;
        font-size: 22px !important;
    }



    .nav-link {
        color: white !important;
        transition: all 0.3s linear;
    }

    .nav-link:hover {
        color: red !important;
    }

    .active {
        color: rgb(203, 140, 117);
    }

    .container-fluid {
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .navbar-brand {
        margin-left: 20px;
    }

    @media (max-width: 750px) {
        .nav-item {
            display: inline-block;
            margin-left: 8px;
            margin-right: 8px;
            font-size: 17px !important;
        }
    }
</style>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid ">

            <a class="navbar-brand" href="#">
                <span id="logo_1">Career</span>
                <span id="logo_2">Path</span>

            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText"
                aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse  navbar-collapse" id="navbarText">

                <ul class="navbar-nav ms-auto  mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contact</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">About</a>
                    </li>
                </ul>


            </div>
        </div>
    </nav>

    <div class="container">
        <div class="container my-4">
            <!-- Add Career Path Form -->
            <h1 class="mb-4">Add Career Path</h1>
            <form action="/api/users/admin" method="POST">
                <!-- Career Path Section -->
                <h3 class="mb-3">Career Path</h3>
                <div class="mb-3">
                    <label for="careerPathName" class="form-label">Career Path Name:</label>
                    <input type="text" class="form-control" id="careerPathName" name="careerPath[name]" required>
                </div>
                <div class="mb-3">
                    <label for="careerPathDescription" class="form-label">Career Path Description:</label>
                    <textarea class="form-control" id="careerPathDescription" name="careerPath[description]"
                        required></textarea>
                </div>

                <!-- Career Field Section -->
                <h3 class="my-3">Career Field within Career Path</h3>
                <div class="mb-3">
                    <label for="careerFieldName" class="form-label">Career Field Name:</label>
                    <input type="text" class="form-control" id="careerFieldName" name="careerField[name]" required>
                </div>
                <div class="mb-3">
                    <label for="careerFieldDescription" class="form-label">Career Field Description:</label>
                    <textarea class="form-control" id="careerFieldDescription"
                        name="careerField[description]"></textarea>
                </div>
                <div class="mb-3">
                    <label for="syllabus" class="form-label">Syllabus (comma-separated):</label>
                    <input type="text" class="form-control" id="syllabus" name="careerField[syllabus]">
                </div>

                <!-- Specialization Section -->
                <h3 class="my-3">Specialization within Career Field</h3>
                <div class="mb-3">
                    <label for="specializationName" class="form-label">Specialization Name:</label>
                    <input type="text" class="form-control" id="specializationName" name="specialization[name]"
                        required>
                </div>
                <div class="mb-3">
                    <label for="specializationRoadmap" class="form-label">Specialization Roadmap
                        (comma-separated):</label>
                    <input type="text" class="form-control" id="specializationRoadmap" name="specialization[roadmap]">
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Add Career Path</button>
            </form>
        </div>


    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
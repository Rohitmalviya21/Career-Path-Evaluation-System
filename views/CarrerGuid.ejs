<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Career Paths</title>
    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">


    <style>
        body {
            background-color: rgb(187, 182, 182);
            margin: 0;
            padding: 0;
        }

        .container1 {
            margin-left: 30px !important;
            margin-right: 10px !important;
        }

        /* Card Container Styling */
        .row {
            margin-top: 20px;
        }

        /* Card Styling */
        .career-card {
            min-height: 200px;
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .card-class {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        /* Hover Effect */
        .career-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        }

        /* Card Content Styling */
        .card-title {
            font-size: 1.25rem;
            font-weight: bold;
            color: #343a40;
            margin-bottom: 0.5rem;
        }

        .card-text {
            font-size: 0.9rem;
            color: #555;
            line-height: 1.4;
            margin-bottom: 1rem;
        }

        /* "See More" Link Styling */
        .toggle-link {
            font-size: 0.9rem;
            color: #007bff;
            cursor: pointer;
            text-decoration: none;
        }

        .toggle-link:hover {
            text-decoration: underline;
        }

        /* Card Link Styling */
        .card-link {
            display: inline-block;
            color: #17a2b8;
            font-weight: 600;
            text-decoration: none;
        }

        .card-link:hover {
            color: #138496;
            text-decoration: underline;
        }

        /* Spacing between Cards */
        .col {
            padding: 15px;
        }
    </style>

</head>

<body>
    <div class="container1 mt-3">
        <h1>Career Paths</h1>
        <div class=" card-class">
            <% careerPaths.forEach((career, index)=> { %>
                <div class="">
                    <div class="card career-card" style="width: 18rem">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= career.name %>
                            </h5>
                            <p class="card-text" id="description-<%= index %>">
                                <%= career.description.substring(0, 100) %>
                                    <span class="more-text" style="display: none;">
                                        <%= career.description.substring(100) %>
                                    </span>
                                    <% if (career.description.length> 100) { %>
                                        <a href="javascript:void(0);" onclick="toggleDescription(<%= index %>)"
                                            class="toggle-link">See More</a>
                                        <% } %>
                            </p>
                            <a href="/api/users/couse/<%= career._id %>" class="card-link">View Courses</a>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>

        <script>
            function toggleDescription(index) {
                const moreText = document.querySelector(`#description-${index} .more-text`);
                const link = document.querySelector(`#description-${index} .toggle-link`);

                if (moreText.style.display === "none") {
                    moreText.style.display = "inline";
                    link.textContent = "See Less";
                } else {
                    moreText.style.display = "none";
                    link.textContent = "See More";
                }
            }
        </script>


        <script>
            function toggleDescription(index) {
                const moreText = document.querySelector(`#description-${index} .more-text`);
                const link = document.querySelector(`#description-${index} a`);

                if (moreText.style.display === "none") {
                    moreText.style.display = "inline";
                    link.textContent = "See Less";
                } else {
                    moreText.style.display = "none";
                    link.textContent = "See More";
                }
            }
        </script>

    </div>

    <!-- Bootstrap 5.3 JS (Popper and Bootstrap JS) -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>

</html>